<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>ai.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>background</object-name>
    <object-name>scale</object-name>
    <object-name>float</object-name>
    <object-name>aircraft</object-name>
    <object-name>bouton</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Arup-S2/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>background</object-name>
    <object-name>scale</object-name>
    <object-name>float</object-name>
    <object-name>aircraft</object-name>
    <emission>
      <factor-prop>controls/lighting/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>background</object-name>
    <object-name>scale</object-name>
    <object-name>float</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1.0</factor>
    <axis>
      <x>1.0</x>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>float</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-0.0002</factor>
    <min-m>-0.1</min-m>
    <max-m>0.1</max-m>
    <axis>
      <z>1.0</z>
    </axis>
  </animation>

</PropertyList>
