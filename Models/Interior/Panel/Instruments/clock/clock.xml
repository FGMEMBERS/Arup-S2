<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>clock.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>Face</object-name>
    <object-name>Bezel</object-name>
    <object-name>chrono.sec</object-name>
    <object-name>chrono.min</object-name>
    <object-name>minutes</object-name>
    <object-name>hour</object-name>
    <object-name>button</object-name>

    <!-- Objets transparents -->
    <object-name>AdjDn</object-name>
    <object-name>AdjUp</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Arup-S2/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>minutes</object-name>
    <object-name>hour</object-name>
    <object-name>chrono.min</object-name>
    <object-name>chrono.sec</object-name>
    <emission>
      <factor-prop>controls/lighting/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hour</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor>0.00833333333333333</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>minutes</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor> 0.1 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>chrono.min</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor>0.1</factor>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.015 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>chrono.sec</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor>6</factor>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.015 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>AdjDn</object-name>
    <visible>false</visible>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>AdjUp</object-name>
    <visible>false</visible>
  </animation>

</PropertyList>
